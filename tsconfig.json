{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "lib": ["es2016.array.include"],
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "strict": true,
        "skipLibCheck": true,
        "preserveWatchOutput": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
